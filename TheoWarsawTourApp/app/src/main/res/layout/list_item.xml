<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/imageResourceSize"
    android:background="@color/tan_background"
    >

    <ImageView

        android:layout_width="@dimen/imageResourceSize"
        android:layout_height="@dimen/imageResourceSize"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/attraction_picture"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageResourceSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/txt_container"
        android:orientation="vertical"
        android:layout_toRightOf="@id/attraction_picture"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/sight_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            style="@style/sightBoxStyle"
            android:textColor="@color/generalTextColor"
            android:textSize="@dimen/textBoxSize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/sight_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            style="@style/sightBoxStyle"
            android:textSize="@dimen/textBoxSize"
            android:textColor="@color/generalTextColor"/>
    </LinearLayout>
    <TextView
        android:id="@+id/sight_rating"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        style="@style/ratingBoxStyle"
        android:textSize="@dimen/ratingTextSize"
        android:textColor="@color/category_beer"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/desc_info"
        android:visibility="gone"
        android:src="@drawable/ic_description_black_24dp"
        android:padding="@dimen/textSpaceSignificant" />
</RelativeLayout>