<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="sightBoxStyle">


        <item name="android:padding">@dimen/textSpaceSignificant</item>
    </style>
    <style name="ratingBoxStyle" parent="sightBoxStyle">

        <item name="android:background">@color/tan_background</item>

        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="tabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/generalTextColor</item>
        <item name="tabSelectedTextColor">@color/generalTextColor</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>
    <style name="descriptionStyle" parent="sightBoxStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">fill_horizontal</item>
    </style>

</resources>
